<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
    <link rel="stylesheet" href="/disenio.css">
    <title>Usuarios</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand">LinkVote</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/index">votaciones</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/perfiles">perfiles</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/p_votacion">home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/propuestasCandidatos">propuestas</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <h1 class="text">Bienvenido </h1>

    <div class="container">
        <div class="candidato-container">
            <% results.forEach((candidato) => { %>
                <div class="candidato">
                    <img src="<%= candidato.imagen_url %>" alt="Foto de <%= candidato.nombre %>">
                    <h2><%= candidato.nombre %></h2>
                    <p><%= candidato.descripcion %></p>
                    <a href="/perfiles">Ver Perfil del Candidato</a>
                    <br>
                    <form action="/votar" method="post" onsubmit="return confirmarVoto('<%= candidato.nombre %>')">
                        <input type="hidden" name="id_candidato" value="<%= candidato.id_candidato %>">
                        <button type="submit" class="btn-votar">Votar</button>
                    </form>
                </div>
            <% }); %>
        </div>
    </div>
    <script>
        function confirmarVoto(nombre_candidato) {
            return confirm(`¿Está seguro que quiere votar por ${nombre_candidato}?`);
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
