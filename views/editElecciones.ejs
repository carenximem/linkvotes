    <div class="container">
        <br>
        <h1>Editar Eleccion</h1>
        <br>
        <form action="/editElecciones" method="post">
            <div class="mb-3">
                <label for="id_eleccion" class="form-label">ID</label>
                <input type="number" id="id_eleccion" name="id_eleccion" class="form-control" placeholder="ID" required>
            </div>
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <input type="text" id="nombre_eleccion" name="nombre" class="form-control" placeholder="Nombre" required>
            </div>
            <div class="mb-3">
                <label for="descripcion" class="form-label">Descripción</label>
                <textarea id="descripcion" name="descripcion" class="form-control" placeholder="Descripción" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label for="fecha_inicio" class="form-label">Fecha Inicio</label>
                <input type="date" id="fecha_inicio" name="fecha_inicio" class="form-control" placeholder="Fecha Inicio">
            </div>
            <div class="mb-3">
                <label for="fecha_fin" class="form-label">Fecha Final</label>
                <input type="date" id="fecha_fin" name="fecha_fin" class="form-control" placeholder="Fecha Final">
            </div>
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a href="/elecciones" class="btn btn-secondary">Cancelar</a>
        </form>
