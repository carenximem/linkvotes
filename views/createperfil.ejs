        <h1>Crear perfil</h1>
        <br>
          <form action="/gur" method="post">  
            <div class="mb-3">
                <label for="nombre" class="form-label">candidato</label>
                <select id="id_candidato" name="id_candidato" class="form-control" required>
                <% results.forEach((candidato) => { %> 
                <option value="<%= candidato.id_candidato %>"><%= candidato.nombre %></option>
                <% }); %>
                </select>
                </div>
            <div class="mb-3">
              <label for="nombre" class="form-label">estudios academicos</label>
              <textarea id="estudios_academicos" name="estudios_academicos" class="form-control" placeholder="estudios_academicos" rows="3" required></textarea>
          </div>
            <div class="mb-3">
                <label for="partido" class="form-label">logros</label>
                <textarea id="logros_reconocimientos" name="logros_reconocimientos" class="form-control" placeholder="logros_reconocimientos" rows="3"></textarea>
            </div>

            <div class="mb-3">
                <label for="fehcaregistro" class="form-label">antecedentes</label>
                <textarea id="antecedentes" name="antecedentes" class="form-control" placeholder="antecedentes" rows="3"></textarea>
            </div>
         
            <button type="submit" class="btn btn-primary">Registrar</button>
            <a href="/perfil" class="btn btn-secondary">Cancelar</a>
        </form>
